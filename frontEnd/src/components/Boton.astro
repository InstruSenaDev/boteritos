---
interface Props {
  text: string;
  type: string;
}

const { text, type } = Astro.props;
---

<button
    class:list={[
        "font-cocogooseRegular tracking-widest text-button max-w-[400px] min-w-28 w-full h-[50px] rounded-xl border-darkBlue",
        {
            "bg-white text-darkBlue hover:bg-darkBlue hover:text-white ":type==='white',
            "bg-darkBlue text-white hover:bg-hoverBlue hover:text-white ":type==='blue'
        }
    ]}>
  {text}
</button>
