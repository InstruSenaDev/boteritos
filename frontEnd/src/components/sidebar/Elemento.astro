---
interface Props {
  icon: string;
  texto: string;
}

const { icon, texto } = Astro.props;
---

<div class="w-full flex items-center rounded-3xl text-gray hover:bg-darkBlue hover:text-white cursor-pointer sidebar-element transition-all duration-300 ease-in-out">
  <div class="w-[60px] h-[44px] flex justify-center items-center">
    <i class={`text-xl ${icon}`}></i>
  </div>
  <span class="font-cocogooseLight text-paragraph2 max-w-0 opacity-0 transition-all duration-150 ease-in-out">{texto}</span>
</div>