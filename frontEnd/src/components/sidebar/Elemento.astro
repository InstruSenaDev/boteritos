---
interface Props {
  icon: string;
  texto: string;
  textSize?: string; // Propiedad opcional para el tama√±o de texto
}

const { icon, texto, textSize } = Astro.props;
---

<div class={`w-full flex items-center rounded-3xl text-gray hover:bg-darkBlue hover:text-white ease-in duration-300 cursor-pointer transition-all duration-300 `}>
  <div class="w-[60px] h-[44px] flex justify-center items-center">
    <i class={`text-xl ${icon}`}></i>
  </div>
  <span class="font-cocogooseLight text-paragraph2 text-content hidden transition-all duration-300 elemento">{texto}</span>
</div>