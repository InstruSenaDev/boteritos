---
interface Props {
    nombre: string,
    area: string,
    hora: string,
    img: string;
}

const {nombre, area, hora, img} = Astro.props;
---

<div class="flex px-2 py-5 gap-x-5 x">
    <div class="w-[60px] h-[60px] rounded-full">
        <img src={img} alt="Hola" class="w-full h-full object-cover rounded-full">
    </div>
    <div>
        <p class="font-cocogooseSemiLight text-subTitle2"><span class="text-darkBlue">{nombre}</span> ha creado un nuevo logro para el area de {area}</p>
        <p class="font-cocogooseLight text-subTitle text-darkBlue">hace {hora} hora(s)</p>
    </div>
</div>