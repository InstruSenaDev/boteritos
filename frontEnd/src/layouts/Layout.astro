---
import '../../input.css';

interface Props { //TypeScript
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="e">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="../../public/img/IconBoteritos.png" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://kit.fontawesome.com/763c79dbc1.js" crossorigin="anonymous"></script>
		<title>{title}</title>
	</head>
	<body class="min-h-full bg-backgroundWhite flex">
		<slot/>
	</body>
</html>